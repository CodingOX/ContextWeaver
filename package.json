{
  "name": "@alistar.max/contextweaver",
  "version": "0.0.8",
  "description": "A context weaving tool for LLMs",
  "license": "MIT",
  "author": "alistar.max",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodingOX/ContextWeaver.git"
  },
  "homepage": "https://github.com/CodingOX/ContextWeaver#readme",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "contextweaver": "dist/index.js",
    "cw": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "engines": {
    "node": ">=20 <25"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --out-dir dist --sourcemap --clean",
    "build:release": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
    "dev": "tsup src/index.ts --format esm --dts --out-dir dist --sourcemap --watch",
    "fmt": "biome check --write ./src",
    "test": "tsx tests/language-support.test.ts && tsx tests/runtime/registry.test.ts && tsx tests/runtime/docs-guard.test.ts && tsx tests/runtime/workspace-packages.test.ts && tsx tests/runtime/plugin-loader.test.ts && tsx tests/runtime/config-multi-key.test.ts && tsx tests/runtime/embedding-client.test.ts && tsx tests/runtime/reranker-client.test.ts && tsx tests/runtime/multi-key-docs.test.ts",
    "test:runtime": "tsx tests/runtime/registry.test.ts",
    "test:e2e:mcp": "pnpm build && tsx tests/mcp-e2e-smoke.ts",
    "prepublishOnly": "pnpm test",
    "prepack": "pnpm build",
    "test:install:node24": "node tests/install/node24-smoke.mjs"
  },
  "dependencies": {
    "tree-sitter": "^0.25.0",
    "@lancedb/lancedb": "^0.22.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "better-sqlite3": "^12.2.0",
    "cac": "^6.7.14",
    "chardet": "^2.1.1",
    "dotenv": "^17.2.3",
    "fdir": "^6.5.0",
    "iconv-lite": "^0.7.1",
    "ignore": "^7.0.5",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "tree-sitter-go": "0.25.0",
    "tree-sitter-javascript": "0.25.0",
    "tree-sitter-python": "0.25.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.0",
    "knip": "^5.78.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter",
      "better-sqlite3",
      "esbuild",
      "tree-sitter-go",
      "tree-sitter-javascript",
      "tree-sitter-python",
      "tree-sitter-c",
      "tree-sitter-c-sharp",
      "tree-sitter-cpp",
      "tree-sitter-java",
      "tree-sitter-kotlin",
      "tree-sitter-php",
      "tree-sitter-ruby",
      "tree-sitter-rust",
      "tree-sitter-swift",
      "tree-sitter-typescript",
      "tree-sitter-cli"
    ]
  }
}
